        // Funzione per gestire il filtraggio per priorità
        function togglePriorityFilter(priority) {
            const filterButton = document.getElementById(priority + 'Filter');

            // Inverti lo stato del filtro
            activePriorityFilters[priority] = !activePriorityFilters[priority];

            // Aggiorna l'aspetto del pulsante
            if (activePriorityFilters[priority]) {
                filterButton.classList.add('active');
            } else {
                filterButton.classList.remove('active');
            }

            // Applica i filtri
            applyFilters();
        }

        // Funzione per applicare tutti i filtri attivi
        function applyFilters() {
            const taskItems = document.querySelectorAll('#taskList .task-item');
            const hasActiveFilters = Object.values(activePriorityFilters).some(value => value === true);

            taskItems.forEach(taskItem => {
                if (hasActiveFilters) {
                    // Se ci sono filtri attivi, verifica se l'elemento corrisponde ai filtri
                    let isVisible = false;

                    if (activePriorityFilters.urgent && taskItem.classList.contains('priority-urgent')) {
                        isVisible = true;
                    }
                    if (activePriorityFilters.medium && taskItem.classList.contains('priority-medium')) {
                        isVisible = true;
                    }
                    if (activePriorityFilters.basic && taskItem.classList.contains('priority-normal')) {
                        isVisible = true;
                    }

                    // Imposta la visibilità dell'elemento task e del suo container
                    const container = taskItem.closest('.task-container');
                    if (container) {
                        container.style.display = isVisible ? 'block' : 'none';
                    } else {
                        taskItem.style.display = isVisible ? 'flex' : 'none';
                    }
                } else {
                    // Se non ci sono filtri attivi, mostra tutti gli elementi
                    const container = taskItem.closest('.task-container');
                    if (container) {
                        container.style.display = 'block';
                    } else {
                        taskItem.style.display = 'flex';
                    }
                }
            });
        }
        // ... existing code ...
    </script>
