<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <title>Task Manager</title>
    <!-- Libreria Supabase -->
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <!-- Link al file CSS esterno -->
    <link rel="stylesheet" href="styles.css?v=1.0">
</head>

<body>
    <div class="container">
        <div class="bar">
            <div class="projects-container">
                <button class="projects-trigger">
                    <span id="currentProjectName">Select Project</span>
                    <i>
                        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                                stroke-linejoin="round" />
                        </svg>
                    </i>
                </button>
                <div class="projects-content">
                    <div id="projectsList">
                        <!-- I progetti verranno inseriti qui dinamicamente -->
                    </div>
                    <div class="divider"></div>
                    <button class="add-project-menu-button">
                        <i data-lucide="plus" class="icon-plus"></i>
                        Add project
                    </button>
                </div>
            </div>
            <button class="add-project-button" id="addProjectButton">
                <i data-lucide="plus"></i>
                Add Project
            </button>

            <!-- Sostituisco il pulsante task completate con la struttura informativa -->
            <div class="info-container">
                <!-- Sezione INFORMATIONS -->
                <h3 class="info-header">INFORMATIONS</h3>
                <div class="info-item completed-button" id="completedTasksButton">
                    <i data-lucide="check-circle" class="icon-check-circle"></i>
                    <span>Completed</span>
                    <span class="info-value" id="completedCount">0</span>
                </div>
                <div class="info-item">
                    <i data-lucide="alarm-clock-check" class="icon-alarm-clock-check"></i>
                    <span>Total time</span>
                    <span class="info-value" id="totalTime">3d 2h 10m</span>
                </div>

                <!-- Sezione PRIORITY -->
                <h3 class="info-header">PRIORITY</h3>
                <div class="info-item completed-button priority-filter" id="urgentFilter">
                    <i data-lucide="flame" class="urgent-icon icon-flame"></i>
                    <span>On Fire</span>
                    <span class="info-value" id="urgentTasksCount">5</span>
                </div>
                <div class="info-item completed-button priority-filter" id="mediumFilter">
                    <i data-lucide="alert-circle" class="medium-icon icon-alert-circle"></i>
                    <span>Pressure</span>
                    <span class="info-value" id="mediumTasksCount">10</span>
                </div>
                <div class="info-item completed-button priority-filter" id="basicFilter">
                    <i data-lucide="circle" class="basic-icon icon-circle"></i>
                    <span>Chill</span>
                    <span class="info-value" id="basicTasksCount">0</span>
                </div>
            </div>

            <div class="project-input-group" id="projectInputGroup">
                <input type="text" id="projectInput" class="project-input" placeholder="Nuovo progetto...">
                <button id="confirmProjectButton" onclick="toggleProjectInput()">
                    <i data-lucide="x" class="icon-x"></i>
                </button>
            </div>
        </div>
        <div class="column_container">
            <div class="tasks_container">
                <div class="task-list" id="taskList">
                    <!-- Le attività verranno visualizzate qui -->
                </div>
                <div class="task-list completed-tasks-list" id="completedTasksList" style="display: none;">
                    <!-- Le attività completate verranno visualizzate qui -->
                </div>
                <div class="status-message" id="statusMessage"></div>
            </div>
            <div class="">
                <div class="input-group" id="taskInputGroup">
                    <div class="task-input-container">
                        <div class="priority-selector">
                            <div class="priority-option priority-urgent" data-priority="urgent" title="Urgente"></div>
                            <div class="priority-option priority-medium" data-priority="medium" title="Media"></div>
                            <div class="priority-option priority-normal" data-priority="normal" title="Normale"></div>
                        </div>
                        <input type="text" id="taskInput" class="task-input"
                            placeholder="Inserisci una nuova attività...">
                        <div class="task-input-divider"></div>
                        <div class="task-input-plus-icon">
                            <i data-lucide="plus" class="icon-plus"></i>
                        </div>
                    </div>
                    <button id="addTaskButton" onclick="addTask()">
                        <i data-lucide="arrow-up" class="icon-arrow-up"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Popup di conferma -->
    <div class="confirm-popup" id="confirmDeletePopup">
        <div class="confirm-popup-content">
            <div class="confirm-popup-title">Delete project</div>
            <div class="confirm-popup-message">This project contains tasks. Are you sure you want to delete it? This
                action cannot be undone.</div>
            <div class="confirm-popup-buttons">
                <button class="confirm-popup-button back" onclick="closeConfirmPopup()">Back</button>
                <button class="confirm-popup-button delete" onclick="confirmDeleteProject()">Delete</button>
            </div>
        </div>
    </div>

    <script src="renderer.js"></script>
    <script>
        // Inizializza le Lucide Icons
        lucide.createIcons();

        // Variabili globali
        let currentEditingTaskId = null;
        let currentProjectId = null;
        let supabase = null;
        let projectToDelete = null;
        let currentPriority = 'normal'; // Priorità di default
        let showCompletedTasks = false;
        let activePriorityFilters = {
            urgent: false,
            medium: false,
            basic: false
        };

        // Credenziali di Supabase
        const SUPABASE_URL = window.env.SUPABASE_URL;
        const SUPABASE_KEY = window.env.SUPABASE_KEY;

        // Inizializza l'interfaccia utente
        function initUI() {
            // Aggiungi i gestori eventi per i pulsanti
            document.getElementById('addTaskButton').addEventListener('click', addTask);
            document.getElementById('addProjectButton').addEventListener('click', toggleProjectInput);
            document.querySelector('.add-project-menu-button').addEventListener('click', () => {
                toggleProjectInput();
            });

            // Aggiungi il gestore per il bottone Completed
            document.getElementById('completedTasksButton').addEventListener('click', toggleCompletedTasks);

            // Aggiungi gestori per i filtri di priorità
            document.getElementById('urgentFilter').addEventListener('click', () => togglePriorityFilter('urgent'));
            document.getElementById('mediumFilter').addEventListener('click', () => togglePriorityFilter('medium'));
            document.getElementById('basicFilter').addEventListener('click', () => togglePriorityFilter('basic'));

            // Assicurati che la vista delle task completate sia disattivata all'avvio
            showCompletedTasks = false;
            document.getElementById('completedTasksList').style.display = 'none';
            document.getElementById('taskList').style.display = 'flex';
            document.getElementById('completedTasksButton').classList.remove('active');

            // Inizializza il selettore di priorità
            initPrioritySelector();

            // Gestisce l'icona plus nell'input delle task
            const taskInput = document.getElementById('taskInput');
            taskInput.addEventListener('input', function () {
                const taskInputContainer = this.closest('.task-input-container');
                if (this.value.trim() !== '') {
                    taskInputContainer.classList.add('has-text');
                } else {
                    taskInputContainer.classList.remove('has-text');
                }
            });

            // Aggiungi supporto per premere Invio nei campi di input
            document.getElementById('taskInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    addTask();
                }
            });

            document.getElementById('projectInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    addProject();
                }
            });

            // Connetti a Supabase all'avvio
            connectToSupabase();

            // Aggiungi event listener per chiudere il menu quando si esce dal container
            document.querySelector('.projects-container').addEventListener('mouseleave', () => {
                const allMenus = document.querySelectorAll('.menu-dropdown');
                allMenus.forEach(menu => {
                    menu.style.display = 'none';
                });
            });

            // Chiudi il menu dei progetti quando l'app viene chiusa
            window.addEventListener('beforeunload', () => {
                const projectsContent = document.querySelector('.projects-content');
                if (projectsContent) {
                    projectsContent.style.display = 'none';
                }
            });
        }

        // Aggiungi la funzione per gestire il dropdown
        function toggleProjectInput() {
            const inputGroup = document.getElementById('projectInputGroup');
            const addButton = document.getElementById('addProjectButton');
            const projectsContainer = document.querySelector('.projects-container');
            const projectsTrigger = document.querySelector('.projects-trigger');
            const taskInput = document.getElementById('taskInput');
            const taskInputGroup = document.getElementById('taskInputGroup');
            const taskList = document.getElementById('taskList');
            const confirmButton = document.getElementById('confirmProjectButton');
            const projectsList = document.getElementById('projectsList');

            if (inputGroup.classList.contains('visible')) {
                inputGroup.classList.remove('visible');
                // Mostra il pulsante Add Project solo se non ci sono progetti
                if (projectsList.children.length === 0) {
                    addButton.style.display = 'flex';
                }
                // Riabilita tutti gli elementi
                projectsTrigger.disabled = false;
                document.querySelectorAll('.project-item').forEach(item => {
                    item.style.pointerEvents = 'auto';
                });
                taskInput.disabled = false;
                taskInputGroup.style.pointerEvents = 'auto';
                taskList.style.pointerEvents = 'auto';
                // Ripulisco l'input quando chiudo
                document.getElementById('projectInput').value = '';
            } else {
                inputGroup.classList.add('visible');
                addButton.style.display = 'none';
                document.getElementById('projectInput').focus();
                // Disabilita tutti gli elementi
                projectsTrigger.disabled = true;
                document.querySelectorAll('.project-item').forEach(item => {
                    item.style.pointerEvents = 'none';
                });
                taskInput.disabled = true;
                taskInputGroup.style.pointerEvents = 'none';
                taskList.style.pointerEvents = 'none';
                // Mostro l'icona X nel pulsante
                confirmButton.innerHTML = '<i data-lucide="x" class="icon-x"></i>';
                lucide.createIcons();
            }
        }

        // Funzione per aggiungere un nuovo progetto
        async function addProject() {
            const projectInput = document.getElementById('projectInput');
            const projectName = projectInput.value.trim();

            if (!projectName) return;

            try {
                const { data, error } = await supabase
                    .from('projects')
                    .insert([{ name: projectName }])
                    .select();

                if (error) throw error;

                if (data && data.length > 0) {
                    createProjectElement(data[0].id, projectName);
                    projectInput.value = '';
                    toggleProjectInput(); // Nascondi l'input dopo aver aggiunto il progetto

                    // Nascondi il pulsante Add Project e mostra il container dei progetti e le informazioni
                    const addProjectButton = document.getElementById('addProjectButton');
                    const projectsContainer = document.querySelector('.projects-container');
                    const infoContainer = document.querySelector('.info-container');

                    if (addProjectButton && projectsContainer) {
                        addProjectButton.style.display = 'none';
                        projectsContainer.classList.add('visible');

                        // Assicurati che il contenitore info sia visibile
                        if (infoContainer) {
                            infoContainer.style.display = 'flex';
                        }
                    }

                    // Seleziona automaticamente il progetto appena creato
                    selectProject(data[0].id, projectName);

                    // Controlla se ora ci sono più di un progetto e aggiungi l'opzione "All" se necessario
                    const projectsList = document.getElementById('projectsList');
                    const projectElements = projectsList.querySelectorAll('.project-item');
                    const allOption = document.getElementById('project-all');

                    if (projectElements.length > 1 && !allOption) {
                        const newAllOption = document.createElement('div');
                        newAllOption.className = 'project-item';
                        newAllOption.id = 'project-all';
                        newAllOption.dataset.projectId = 'all';
                        newAllOption.innerHTML = `
                            <div class="project-content">All</div>
                        `;
                        newAllOption.addEventListener('click', () => selectProject('all', 'All'));
                        projectsList.insertBefore(newAllOption, projectsList.firstChild);
                    }
                }
            } catch (error) {
                console.error('Errore durante la creazione del progetto:', error);
            }
        }

        // Crea un elemento progetto nell'interfaccia
        function createProjectElement(projectId, projectName) {
            const projectsList = document.getElementById('projectsList');

            const projectElement = document.createElement('div');
            projectElement.className = 'project-item';
            projectElement.id = 'project-' + projectId;
            projectElement.dataset.projectId = projectId;

            // Crea il contenitore per il nome e il menu
            const projectContent = document.createElement('div');
            projectContent.className = 'project-content';
            projectContent.textContent = projectName;
            projectContent.addEventListener('click', () => {
                if (currentProjectId === 'all') {
                    selectProject(projectId, projectName);
                } else {
                    selectProject(projectId, projectName);
                }
            });

            // Crea il menu a 3 puntini
            const menuButton = document.createElement('button');
            menuButton.className = 'menu-button';
            menuButton.innerHTML = '<i data-lucide="more-vertical" class="icon-more-vertical"></i>';
            menuButton.addEventListener('click', (e) => {
                e.stopPropagation();
                toggleProjectMenu(projectId);
            });

            // Crea il menu dropdown
            const menuDropdown = document.createElement('div');
            menuDropdown.className = 'menu-dropdown';
            menuDropdown.id = 'menu-' + projectId;
            menuDropdown.style.display = 'none';

            // Crea le opzioni del menu
            const editOption = document.createElement('div');
            editOption.className = 'menu-option';
            editOption.innerHTML = '<i data-lucide="edit" class="icon-edit"></i> Modifica';
            editOption.addEventListener('click', () => editProject(projectId, projectName));

            const deleteOption = document.createElement('div');
            deleteOption.className = 'menu-option delete';
            deleteOption.innerHTML = '<i data-lucide="trash-2" class="icon-trash"></i> Elimina';
            deleteOption.addEventListener('click', () => showConfirmPopup(projectId));

            // Assembla il menu
            menuDropdown.appendChild(editOption);
            menuDropdown.appendChild(deleteOption);

            // Assembla il progetto
            projectElement.appendChild(projectContent);
            projectElement.appendChild(menuButton);
            projectElement.appendChild(menuDropdown);

            projectsList.appendChild(projectElement);
            lucide.createIcons();
        }

        // Funzione per gestire la visualizzazione del menu
        function toggleProjectMenu(projectId) {
            const menu = document.getElementById('menu-' + projectId);
            const menuButton = document.querySelector(`#project-${projectId} .menu-button`);
            const allMenus = document.querySelectorAll('.menu-dropdown');

            // Chiudi tutti gli altri menu
            allMenus.forEach(m => {
                if (m.id !== 'menu-' + projectId) {
                    m.style.display = 'none';
                }
            });

            // Toggle del menu corrente
            if (menu.style.display === 'none' || !menu.style.display) {
                // Ottieni la posizione del pulsante
                const buttonRect = menuButton.getBoundingClientRect();

                // Posiziona il menu a destra del pulsante
                menu.style.display = 'block';
                menu.style.top = `${buttonRect.top}px`;
                menu.style.left = `${buttonRect.right + 8}px`;
            } else {
                menu.style.display = 'none';
            }
        }

        // Funzione per modificare un progetto
        function editProject(projectId, currentName) {
            const projectElement = document.getElementById('project-' + projectId);
            const projectContent = projectElement.querySelector('.project-content');

            // Crea l'input per la modifica
            const input = document.createElement('input');
            input.type = 'text';
            input.value = currentName;
            input.className = 'project-edit-input';

            // Sostituisci il contenuto con l'input
            projectContent.innerHTML = '';
            projectContent.appendChild(input);
            input.focus();

            // Gestisci il salvataggio
            input.addEventListener('blur', async () => {
                const newName = input.value.trim();
                if (newName && newName !== currentName) {
                    try {
                        const { error } = await supabase
                            .from('projects')
                            .update({ name: newName })
                            .eq('id', projectId);

                        if (error) throw error;

                        projectContent.textContent = newName;

                        // Se il progetto è attualmente selezionato, aggiorna anche il titolo
                        if (currentProjectId === projectId) {
                            document.getElementById('currentProjectName').textContent = newName;
                        }
                    } catch (error) {
                        console.error('Errore durante la modifica del progetto:', error);
                    }
                } else {
                    projectContent.textContent = currentName;
                }
            });

            // Gestisci il tasto Enter
            input.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    input.blur();
                }
            });
        }

        // Funzione per mostrare il popup di conferma
        async function showConfirmPopup(projectId) {
            try {
                // Controlla se il progetto ha delle task
                const { data: tasks, error } = await supabase
                    .from('tasks')
                    .select('id')
                    .eq('project_id', projectId)
                    .limit(1);

                if (error) throw error;

                if (tasks && tasks.length > 0) {
                    // Se ci sono task, mostra il popup di conferma
                    projectToDelete = projectId;
                    document.getElementById('confirmDeletePopup').classList.add('visible');
                } else {
                    // Se non ci sono task, elimina direttamente il progetto
                    await deleteProject(projectId);
                }
            } catch (error) {
                console.error('Errore durante il controllo delle task:', error);
            }
        }

        // Funzione per chiudere il popup
        function closeConfirmPopup() {
            document.getElementById('confirmDeletePopup').classList.remove('visible');
            projectToDelete = null;
        }

        // Funzione per confermare l'eliminazione del progetto
        async function confirmDeleteProject() {
            if (projectToDelete) {
                await deleteProject(projectToDelete);
                closeConfirmPopup();
            }
        }

        // Funzione per eliminare un progetto
        async function deleteProject(projectId) {
            try {
                // Prima elimina tutte le task associate al progetto
                const { error: tasksError } = await supabase
                    .from('tasks')
                    .delete()
                    .eq('project_id', projectId);

                if (tasksError) throw tasksError;

                // Poi elimina il progetto
                const { error: projectError } = await supabase
                    .from('projects')
                    .delete()
                    .eq('id', projectId);

                if (projectError) throw projectError;

                // Rimuovi l'elemento dall'interfaccia
                const projectElement = document.getElementById('project-' + projectId);
                if (projectElement) {
                    projectElement.remove();
                }

                // Se il progetto eliminato era quello selezionato, resetta la selezione
                if (currentProjectId === projectId) {
                    currentProjectId = null;
                    document.getElementById('currentProjectName').textContent = '';
                    document.getElementById('taskList').innerHTML = '';
                    localStorage.removeItem('lastSelectedProject');
                }

                // Controlla se ci sono ancora progetti e aggiorna la visibilità del pulsante e del container
                const projectsList = document.getElementById('projectsList');
                const addProjectButton = document.getElementById('addProjectButton');
                const projectsContainer = document.querySelector('.projects-container');
                const infoContainer = document.querySelector('.info-container');

                // Chiudi il menu dropdown
                const menu = document.getElementById('menu-' + projectId);
                if (menu) {
                    menu.style.display = 'none';
                }

                // Controlla il numero di progetti rimanenti (escludendo l'opzione "All")
                const remainingProjects = Array.from(projectsList.children).filter(child => child.dataset.projectId !== 'all');

                if (remainingProjects.length === 0) {
                    // Se non ci sono più progetti, mostra il pulsante Add Project e nascondi il container
                    addProjectButton.style.display = 'flex';
                    projectsContainer.classList.remove('visible');
                    infoContainer.style.display = 'none'; // Nascondi il contenitore info
                    document.getElementById('currentProjectName').textContent = '';
                    document.getElementById('taskList').innerHTML = ''; // Pulisci la lista delle task

                    // Rimuovi l'opzione "All" se presente
                    const allOption = document.getElementById('project-all');
                    if (allOption) {
                        allOption.remove();
                    }
                } else if (remainingProjects.length === 1) {
                    // Se rimane solo un progetto, selezionalo automaticamente e rimuovi l'opzione "All"
                    const lastProject = remainingProjects[0];
                    const lastProjectId = lastProject.dataset.projectId;
                    const lastProjectName = lastProject.querySelector('.project-content').textContent;
                    selectProject(lastProjectId, lastProjectName);

                    // Rimuovi l'opzione "All" se presente
                    const allOption = document.getElementById('project-all');
                    if (allOption) {
                        allOption.remove();
                    }
                }

            } catch (error) {
                console.error('Errore durante l\'eliminazione del progetto:', error);
            }
        }

        // Funzione per selezionare un progetto
        async function selectProject(projectId, projectName) {
            currentProjectId = projectId;

            // Salva l'ultimo progetto selezionato
            localStorage.setItem('lastSelectedProject', JSON.stringify({
                id: projectId,
                name: projectName
            }));

            // Aggiorna l'interfaccia
            document.getElementById('currentProjectName').textContent = projectName;

            // Aggiorna lo stile dei progetti
            document.querySelectorAll('.project-item').forEach(item => {
                item.classList.remove('active');
            });

            if (projectId !== 'all') {
                document.getElementById('project-' + projectId).classList.add('active');
            }

            // Chiudi il dropdown
            document.querySelector('.projects-content').classList.remove('active');

            // Carica le task del progetto
            await loadTasks();

            // La funzione loadTasks si occupa già di aggiornare le statistiche
            // Assicuriamoci che il contenitore info sia visibile
            const infoContainer = document.querySelector('.info-container');
            if (infoContainer) {
                infoContainer.style.display = 'flex';
            }
        }

        // Carica i progetti da Supabase
        async function loadProjects() {
            try {
                const { data, error } = await supabase
                    .from('projects')
                    .select('*')
                    .order('created_at', { ascending: false });

                if (error) throw error;

                const projectsList = document.getElementById('projectsList');
                const addProjectButton = document.getElementById('addProjectButton');
                const projectsContainer = document.querySelector('.projects-container');
                const infoContainer = document.querySelector('.info-container');
                projectsList.innerHTML = '';

                // Gestisci la visibilità del pulsante Add Project e del container dei progetti
                if (addProjectButton && projectsContainer) {
                    if (!data || data.length === 0) {
                        // Nascondi il container dei progetti e le info e mostra solo il pulsante di aggiunta
                        addProjectButton.style.display = 'flex';
                        projectsContainer.classList.remove('visible');
                        infoContainer.style.display = 'none'; // Nascondi il contenitore info
                        document.getElementById('currentProjectName').textContent = '';
                    } else {
                        // Mostra i progetti e le informazioni
                        addProjectButton.style.display = 'none';
                        projectsContainer.classList.add('visible');
                        infoContainer.style.display = 'flex'; // Mostra il contenitore info

                        // Prima crea tutti i progetti
                        if (data && data.length > 0) {
                            data.forEach(project => {
                                createProjectElement(project.id, project.name);
                            });

                            // Poi controlla se ci sono più di un progetto e aggiungi l'opzione "All"
                            const projectElements = projectsList.querySelectorAll('.project-item');
                            if (projectElements.length > 1) {
                                const allOption = document.createElement('div');
                                allOption.className = 'project-item';
                                allOption.id = 'project-all';
                                allOption.dataset.projectId = 'all';
                                allOption.innerHTML = `
                                    <div class="project-content">All</div>
                                `;
                                allOption.addEventListener('click', () => selectProject('all', 'All'));
                                projectsList.insertBefore(allOption, projectsList.firstChild);
                            }

                            // Carica l'ultimo progetto selezionato
                            const lastProject = localStorage.getItem('lastSelectedProject');
                            if (lastProject) {
                                const { id, name } = JSON.parse(lastProject);
                                // Verifica che il progetto esista ancora
                                if (id === 'all' || data.some(project => project.id === id)) {
                                    selectProject(id, name);
                                }
                            }
                        }
                    }
                } else {
                    // Se non ci sono progetti, resetta la selezione
                    currentProjectId = null;
                    document.getElementById('currentProjectName').textContent = 'Select Project';
                    document.getElementById('taskList').innerHTML = '';
                    localStorage.removeItem('lastSelectedProject');
                }
            } catch (error) {
                console.error('Errore nel caricamento dei progetti:', error);
            }
        }

        // Funzioni per il drag and drop
        let draggedTask = null;
        let dragTargetTimeout = null;
        let potentialParent = null;

        function handleDragStart(e) {
            const isSubtask = this.classList.contains('subtask');

            if (isSubtask) {
                // Se è una subtask, trova eventuali subtask correlate
                const taskId = this.dataset.taskId;
                const subtaskContainer = document.getElementById(`subtasksContainer-${taskId}`);

                // Se questa subtask ha task figlie, trascina il suo contenitore
                if (subtaskContainer && subtaskContainer.querySelectorAll('.task-item').length > 0) {
                    // Crea un contenitore temporaneo per il trascinamento che include questa subtask e tutte le sue task figlie
                    const tempContainer = document.createElement('div');
                    tempContainer.className = 'temp-drag-container';
                    tempContainer.appendChild(this.cloneNode(true));

                    // Aggiungi tutte le task figlie al contenitore temporaneo
                    Array.from(subtaskContainer.children).forEach(child => {
                        tempContainer.appendChild(child.cloneNode(true));
                    });

                    // Usa questo contenitore temporaneo come elemento trascinato
                    draggedTask = tempContainer;
                } else {
                    // Se è una subtask senza figlie, trascina solo l'elemento task
                    draggedTask = this;
                }
            } else {
                // Se è una task principale, controlla se ha un container (dovrebbe sempre averlo)
                const taskContainer = document.getElementById(`taskContainer-${this.dataset.taskId}`);
                if (taskContainer) {
                    // Trascina l'intero container invece che solo l'elemento task
                    draggedTask = taskContainer;
                    taskContainer.classList.add('dragging-container');
                } else {
                    // Fallback nel caso in cui il container non venga trovato
                    draggedTask = this;
                }
            }

            // Aggiungi la classe dragging all'elemento che viene visivamente trascinato
            this.classList.add('dragging');
            e.dataTransfer.effectAllowed = 'move';

            // Memorizza l'ID del genitore originale (se esiste)
            const taskId = this.dataset.taskId;

            // Salva i dati della task trascinata nell'evento dataTransfer
            const dragData = {
                taskId: taskId,
                isSubtask: isSubtask,
                originalParentId: isSubtask ? this.closest('.task-container').id.replace('taskContainer-', '') : null,
                hasSubtasks: isSubtask && document.getElementById(`subtasksContainer-${taskId}`) &&
                    document.getElementById(`subtasksContainer-${taskId}`).querySelectorAll('.task-item').length > 0
            };

            e.dataTransfer.setData('text/plain', JSON.stringify(dragData));
        }

        function handleDragEnd(e) {
            // Rimuovi la classe dragging dall'elemento task
            this.classList.remove('dragging');

            // Se è stata trascinata una task principale, rimuovi anche la classe dal container
            const isSubtask = this.classList.contains('subtask');
            if (!isSubtask && draggedTask && draggedTask.classList.contains('task-container')) {
                draggedTask.classList.remove('dragging-container');
            }

            // Rimuovi la classe di potenziale genitore da tutte le task
            document.querySelectorAll('.potential-parent').forEach(item => {
                item.classList.remove('potential-parent');
            });

            // Resetta le variabili
            if (dragTargetTimeout) {
                clearTimeout(dragTargetTimeout);
                dragTargetTimeout = null;
            }
            potentialParent = null;

            // Salva l'ordine dopo il trascinamento
            saveTaskOrder();
            draggedTask = null;
        }

        function handleDragOver(e) {
            e.preventDefault();
            e.dataTransfer.dropEffect = 'move';

            if (!draggedTask || this === draggedTask) return;

            // Rimuovi la classe potential-parent da tutte le task
            if (potentialParent && potentialParent !== this) {
                potentialParent.classList.remove('potential-parent');
                potentialParent = null;
                clearTimeout(dragTargetTimeout);
                dragTargetTimeout = null;
            }

            // Se stiamo trascinando un container, otteniamo l'elemento task al suo interno
            const draggedTaskItem = draggedTask.classList.contains('task-container') || draggedTask.classList.contains('temp-drag-container')
                ? draggedTask.querySelector('.task-item')
                : draggedTask;

            const isDraggedSubtask = draggedTaskItem.classList.contains('subtask');
            const isTaskItem = this.classList.contains('task-item');

            // Se non è una task draggabile o è una subtask, non fare nulla
            if (!isTaskItem || (this.classList.contains('subtask') && !isDraggedSubtask)) {
                return;
            }

            // Verifica che la task trascinata non sia la stessa su cui stiamo passando
            const draggedTaskId = draggedTaskItem.dataset.taskId;
            const targetTaskId = this.dataset.taskId;

            // Se gli ID sono uguali, è la stessa task, quindi non permettiamo che diventi un potenziale genitore
            if (draggedTaskId === targetTaskId) {
                return;
            }

            const rect = this.getBoundingClientRect();
            const midY = rect.top + rect.height / 2;

            // Se il mouse è sopra la task per un po', consideriamo questa task come potenziale genitore
            if (e.clientY > rect.top + 10 && e.clientY < rect.bottom - 10 && !this.classList.contains('subtask')) {
                // Imposta questa task come potenziale genitore dopo un breve ritardo
                if (!potentialParent) {
                    potentialParent = this;
                    dragTargetTimeout = setTimeout(() => {
                        if (potentialParent) {
                            potentialParent.classList.add('potential-parent');
                        }
                    }, 600); // 600ms di ritardo per mostrare l'indicatore visivo
                }
                return;
            }

            // Determina il container target per l'inserimento
            let targetContainer;
            if (this.classList.contains('subtask')) {
                // Se è una subtask, inserisci nel suo contenitore parent
                targetContainer = this.parentNode;
            } else {
                // Se è una task principale, trova la lista principale o il contenitore appropriato
                targetContainer = this.closest('.task-container').parentNode;
            }

            // Altrimenti, facciamo il normale comportamento di riordinamento
            if (e.clientY < midY) {
                const targetElement = this.classList.contains('subtask') ? this : this.closest('.task-container');
                targetContainer.insertBefore(draggedTask, targetElement);
            } else {
                const targetElement = this.classList.contains('subtask') ? this : this.closest('.task-container');
                targetContainer.insertBefore(draggedTask, targetElement.nextSibling);
            }
        }

        async function handleDrop(e) {
            e.preventDefault();
            if (!draggedTask || this === draggedTask) return;

            // Ottieni i dati della task trascinata
            let dragData;
            try {
                dragData = JSON.parse(e.dataTransfer.getData('text/plain'));
            } catch (error) {
                console.error('Errore nel parsing dei dati trascinati:', error);
                const draggedTaskItem = draggedTask.classList.contains('task-container') || draggedTask.classList.contains('temp-drag-container')
                    ? draggedTask.querySelector('.task-item')
                    : draggedTask;

                if (!draggedTaskItem) {
                    console.error('Elemento task non trovato');
                    return;
                }

                dragData = {
                    taskId: draggedTaskItem.dataset.taskId,
                    hasSubtasks: draggedTask.classList.contains('temp-drag-container')
                };

                if (!dragData.taskId) {
                    console.error('Impossibile ottenere ID della task trascinata');
                    return;
                }
            }

            const taskId = dragData.taskId;
            const isTaskItem = this.classList.contains('task-item');
            const hasSubtasks = dragData.hasSubtasks;

            // Controllo se una subtask è stata rilasciata nella zona principale delle task
            if (dragData.isSubtask && (this.id === 'taskList' || this === document.getElementById('taskList'))) {
                // Una subtask è stata rilasciata nell'area principale: trasformala in task principale
                try {
                    console.log('Conversione di subtask in task principale:', taskId);

                    // Aggiorna il database impostando parent_id a null
                    const { error } = await supabase
                        .from('tasks')
                        .update({ parent_id: null })
                        .eq('id', taskId);

                    if (error) {
                        console.error('Errore nell\'aggiornamento del database:', error);
                        throw error;
                    }

                    // Ricarica le task per aggiornare l'interfaccia
                    await loadTasks();

                    // Mostra un messaggio di successo
                    showStatus('Subtask convertita in task principale', 'success');

                    // Rimuovi l'evidenziazione dall'area di drop
                    document.getElementById('taskList').classList.remove('task-area-highlight');

                    return;
                } catch (error) {
                    console.error('Errore durante la conversione della subtask:', error);
                    showStatus('Errore: ' + (error.message || 'Problema durante la conversione'), 'error');
                    return;
                }
            }

            // Se la task di destinazione ha la classe potential-parent e non è una subtask
            if (isTaskItem && this.classList.contains('potential-parent') && !this.classList.contains('subtask')) {
                // Controlla se la task da spostare ha già delle subtask
                const draggedTaskElement = document.getElementById(`taskContainer-${taskId}`);
                if (draggedTaskElement && draggedTaskElement.classList.contains('has-subtasks')) {
                    // La task ha subtask, non permettere lo spostamento
                    showStatus('Non è possibile spostare una task con subtask dentro un\'altra task', 'error');
                    return;
                }

                const parentId = this.dataset.taskId;
                const draggedTaskId = taskId;

                if (!parentId || !draggedTaskId) {
                    console.error('ID mancante:', { parentId, draggedTaskId });
                    showStatus('Errore: ID mancante', 'error');
                    return;
                }

                // Verifica che non si stia tentando di rendere una task subtask di se stessa
                if (parentId === draggedTaskId) {
                    showStatus('Non è possibile rendere una task subtask di se stessa', 'error');
                    return;
                }

                // Prima ottieni lo stato attuale della task dal database
                try {
                    console.log('Aggiornamento parent_id:', { draggedTaskId, newParentId: parentId });

                    // Verifica che la task esista
                    const { data: taskExists, error: checkError } = await supabase
                        .from('tasks')
                        .select('id, parent_id')
                        .eq('id', draggedTaskId)
                        .single();

                    if (checkError) {
                        console.error('Errore nel controllo della task:', checkError);
                        throw checkError;
                    }

                    if (!taskExists) {
                        console.error('Task non trovata nel database:', draggedTaskId);
                        showStatus('Task non trovata', 'error');
                        return;
                    }

                    // Se la task ha delle subtask, recuperale prima di spostarla
                    let childTasks = [];
                    if (hasSubtasks) {
                        const { data: subtasks, error: subtasksError } = await supabase
                            .from('tasks')
                            .select('id')
                            .eq('parent_id', draggedTaskId);

                        if (!subtasksError && subtasks) {
                            childTasks = subtasks.map(st => st.id);
                        }
                    }

                    // Calcola la nuova posizione come l'ultima posizione tra le subtask del nuovo parent
                    const { data: maxPositionData, error: maxPosError } = await supabase
                        .from('tasks')
                        .select('position')
                        .eq('parent_id', parentId)
                        .order('position', { ascending: false })
                        .limit(1);

                    if (maxPosError) throw maxPosError;

                    const newPosition = maxPositionData && maxPositionData.length > 0
                        ? maxPositionData[0].position + 1
                        : 0;

                    // Aggiorna il parent_id e la position nel database
                    const { error } = await supabase
                        .from('tasks')
                        .update({
                            parent_id: parentId,
                            position: newPosition
                        })
                        .eq('id', draggedTaskId);

                    if (error) {
                        console.error('Errore nell\'aggiornamento del database:', error);
                        throw error;
                    }

                    // Se la task spostata aveva subtask, aggiorniamo la loro gerarchia
                    if (childTasks.length > 0) {
                        // Impostiamo il nuovo parent_id per tutte le task figlie
                        for (let i = 0; i < childTasks.length; i++) {
                            await supabase
                                .from('tasks')
                                .update({
                                    parent_id: draggedTaskId
                                })
                                .eq('id', childTasks[i]);
                        }
                    }

                    console.log('Database aggiornato con successo');

                    // Determinare se la task ha subtask in modo sicuro
                    let hasVisibleSubtasks = hasSubtasks || false;
                    try {
                        // Se è una task principale
                        const taskContainer = document.getElementById(`taskContainer-${draggedTaskId}`);
                        if (taskContainer && taskContainer.classList.contains('has-subtasks')) {
                            hasVisibleSubtasks = true;
                        }
                    } catch (domError) {
                        console.log('Errore non critico nel controllo delle subtask:', domError);
                    }

                    // Rimuovi prima l'elemento dall'UI
                    try {
                        if (draggedTask.classList.contains('task-container')) {
                            // Se è una task principale
                            draggedTask.remove();
                        } else if (draggedTask.classList.contains('temp-drag-container')) {
                            // Se è un contenitore temporaneo per una subtask con figlie
                            draggedTask.remove();
                        } else if (draggedTask.classList.contains('subtask')) {
                            // Se è una subtask semplice
                            draggedTask.remove();
                        }
                        console.log('Elemento rimosso dalla UI');
                    } catch (removeError) {
                        console.log('Errore non critico nella rimozione UI:', removeError);
                    }

                    // Imposta draggedTask a null per evitare problemi quando si ricarica la vista
                    draggedTask = null;

                    console.log('Ricarico le task...');
                    // Ricarica le task per garantire una visualizzazione coerente
                    await loadTasks();
                    console.log('Task ricaricate');

                    // Mostra un messaggio di successo
                    if (hasVisibleSubtasks) {
                        showStatus('Task e relative subtask spostate', 'success');
                    } else {
                        showStatus('Task spostata come subtask', 'success');
                    }
                } catch (error) {
                    console.error('Dettagli errore:', error);
                    showStatus('Errore: ' + (error.message || 'Problema durante lo spostamento'), 'error');

                    // Ricarica comunque le task per ripristinare lo stato coerente
                    try {
                        await loadTasks();
                    } catch (loadError) {
                        console.error('Errore anche nel ricaricare le task:', loadError);
                    }
                }
            } else {
                // Comportamento normale di riordinamento già gestito nel dragOver
                // Salva l'ordine delle task
                saveTaskOrder();
            }

            // Rimuovi la classe potential-parent
            this.classList.remove('potential-parent');

            // Imposta draggedTask a null per evitare problemi
            draggedTask = null;
        }

        // Nuova funzione per salvare l'ordine delle task
        async function saveTaskOrder() {
            if (!currentProjectId) return;

            try {
                const taskList = document.getElementById('taskList');
                // Ottieni solo le task principali (non le subtask)
                const taskContainers = taskList.querySelectorAll('.task-container');
                const taskIds = Array.from(taskContainers).map(container => {
                    // Estrai l'ID dalla task principale all'interno del container
                    const taskItem = container.querySelector('.task-item:not(.subtask)');
                    return taskItem ? taskItem.dataset.taskId : null;
                }).filter(id => id !== null);

                // Salva in localStorage
                localStorage.setItem(`taskOrder_${currentProjectId}`, JSON.stringify(taskIds));

                // Salva anche l'ordine delle subtask per ogni task principale
                taskContainers.forEach(container => {
                    const parentTaskId = container.id.replace('taskContainer-', '');
                    if (!parentTaskId) return;

                    const subtasksContainer = document.getElementById(`subtasksContainer-${parentTaskId}`);
                    if (!subtasksContainer) return;

                    const subtasks = subtasksContainer.querySelectorAll('.task-item');
                    if (subtasks.length === 0) return;

                    const subtaskIds = Array.from(subtasks).map(task => task.dataset.taskId);
                    localStorage.setItem(`subtaskOrder_${parentTaskId}`, JSON.stringify(subtaskIds));

                    // Aggiorna anche le posizioni delle subtask nel database
                    subtaskIds.forEach(async (subtaskId, index) => {
                        await supabase
                            .from('tasks')
                            .update({ position: index })
                            .eq('id', subtaskId);
                    });
                });

                // Aggiorna anche le posizioni nel database per ogni task principale
                for (let i = 0; i < taskIds.length; i++) {
                    await supabase
                        .from('tasks')
                        .update({ position: i })
                        .eq('id', taskIds[i]);
                }
            } catch (error) {
                console.error('Errore nel salvataggio dell\'ordine delle task:', error);
            }
        }

        // Modifica la funzione connectToSupabase per caricare anche i progetti
        async function connectToSupabase() {
            try {
                supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_KEY);

                const { data, error } = await supabase.from('projects').select('count').limit(1);

                if (error) throw error;

                await loadProjects();

            } catch (error) {
                console.error('Errore di connessione:', error);
            }
        }

        // Funzione per aggiornare le statistiche nella sezione info
        function updateInfoStats(tasks) {
            if (!tasks || tasks.length === 0) {
                // Se non ci sono task, imposta tutti i contatori a zero
                document.getElementById('completedCount').textContent = '0';
                document.getElementById('totalTime').textContent = '0d 0h 0m';
                document.getElementById('urgentTasksCount').textContent = '0';
                document.getElementById('mediumTasksCount').textContent = '0';
                document.getElementById('basicTasksCount').textContent = '0';
                return;
            }

            // Conta le task completate
            const completedCount = tasks.filter(task => task.completed).length;
            document.getElementById('completedCount').textContent = completedCount;

            // Calcola il tempo totale (simulato con un calcolo semplice)
            let totalMinutes = 0;
            tasks.forEach(task => {
                if (task.priority === 'urgent') {
                    totalMinutes += 180; // 3 ore per task urgenti
                } else if (task.priority === 'medium') {
                    totalMinutes += 120; // 2 ore per task medie
                } else {
                    totalMinutes += 60; // 1 ora per task normali
                }
            });

            // Converti minuti in giorni, ore e minuti
            const days = Math.floor(totalMinutes / (24 * 60));
            const hours = Math.floor((totalMinutes % (24 * 60)) / 60);
            const mins = totalMinutes % 60;
            document.getElementById('totalTime').textContent = `${days}d ${hours}h ${mins}m`;

            // Aggiorna i contatori per priorità
            const urgentCount = tasks.filter(task => task.priority === 'urgent').length;
            const mediumCount = tasks.filter(task => task.priority === 'medium').length;
            const basicCount = tasks.filter(task => task.priority === 'normal').length;

            document.getElementById('urgentTasksCount').textContent = urgentCount;
            document.getElementById('mediumTasksCount').textContent = mediumCount;
            document.getElementById('basicTasksCount').textContent = basicCount;
        }

        // Carica le task da Supabase
        async function loadTasks() {
            if (!currentProjectId) {
                document.getElementById('taskList').innerHTML = '';
                document.getElementById('completedTasksList').innerHTML = '';
                updateInfoStats([]); // Aggiorna le statistiche con array vuoto
                return;
            }

            try {
                let query = supabase.from('tasks').select('*');

                if (currentProjectId !== 'all') {
                    query = query.eq('project_id', currentProjectId);
                }

                const { data, error } = await query;

                if (error) throw error;

                const taskList = document.getElementById('taskList');
                const completedTasksList = document.getElementById('completedTasksList');
                taskList.innerHTML = '';
                completedTasksList.innerHTML = '';

                if (data && data.length > 0) {
                    // Aggiorna le statistiche con tutte le task
                    updateInfoStats(data);

                    // Separa le task principali dalle subtask
                    const mainTasks = data.filter(task => !task.parent_id);
                    const subtasks = data.filter(task => task.parent_id);

                    // Crea una mappa delle subtask per parent_id
                    const subtasksMap = new Map();
                    subtasks.forEach(subtask => {
                        if (!subtasksMap.has(subtask.parent_id)) {
                            subtasksMap.set(subtask.parent_id, []);
                        }
                        subtasksMap.get(subtask.parent_id).push(subtask);
                    });

                    // Separa le task completate dalle non completate
                    const activeTasks = mainTasks.filter(task => !task.completed);
                    const completedTasks = mainTasks.filter(task => task.completed);

                    // Ordina le task attive in base alla posizione o all'ordine salvato
                    let orderedActiveTasks = [...activeTasks];

                    // Ottieni l'ordine salvato dal localStorage (solo per le task principali)
                    const savedOrder = localStorage.getItem(`taskOrder_${currentProjectId}`);

                    if (savedOrder) {
                        const orderArray = JSON.parse(savedOrder);

                        // Verifica che gli ID esistano ancora nei dati
                        const validOrderArray = orderArray.filter(id =>
                            activeTasks.some(task => task.id.toString() === id.toString())
                        );

                        if (validOrderArray.length > 0) {
                            // Mappa gli ID nell'ordine salvato ai task reali
                            const orderedTasksMap = new Map();
                            activeTasks.forEach(task => {
                                orderedTasksMap.set(task.id.toString(), task);
                            });

                            // Ordina in base all'ordine salvato
                            orderedActiveTasks = validOrderArray
                                .map(id => orderedTasksMap.get(id.toString()))
                                .filter(Boolean);

                            // Aggiungi le task che non erano nell'ordine salvato
                            const remainingTasks = activeTasks.filter(task =>
                                !validOrderArray.includes(task.id.toString())
                            );

                            orderedActiveTasks = [...orderedActiveTasks, ...remainingTasks];
                        } else {
                            // Se l'ordine salvato non contiene ID validi, usa position
                            orderedActiveTasks.sort((a, b) => a.position - b.position);
                        }
                    } else {
                        // Se non c'è un ordine salvato, usa position
                        orderedActiveTasks.sort((a, b) => a.position - b.position);
                    }

                    // Per ogni task principale, ordina le sue subtask in base all'ordine salvato
                    subtasksMap.forEach((taskSubtasks, parentId) => {
                        // Controlla se esiste un ordine salvato per queste subtask
                        const savedSubtaskOrder = localStorage.getItem(`subtaskOrder_${parentId}`);

                        if (savedSubtaskOrder) {
                            try {
                                const orderArray = JSON.parse(savedSubtaskOrder);

                                // Verifica che gli ID esistano ancora nelle subtask
                                const validOrderArray = orderArray.filter(id =>
                                    taskSubtasks.some(task => task.id.toString() === id.toString())
                                );

                                if (validOrderArray.length > 0) {
                                    // Mappa gli ID nell'ordine salvato alle subtask reali
                                    const orderedSubtasksMap = new Map();
                                    taskSubtasks.forEach(task => {
                                        orderedSubtasksMap.set(task.id.toString(), task);
                                    });

                                    // Ordina in base all'ordine salvato
                                    const orderedSubtasks = validOrderArray
                                        .map(id => orderedSubtasksMap.get(id.toString()))
                                        .filter(Boolean);

                                    // Aggiungi le subtask che non erano nell'ordine salvato
                                    const remainingSubtasks = taskSubtasks.filter(task =>
                                        !validOrderArray.includes(task.id.toString())
                                    );

                                    // Aggiorna la mappa con le subtask ordinate
                                    subtasksMap.set(parentId, [...orderedSubtasks, ...remainingSubtasks]);
                                }
                            } catch (error) {
                                console.error('Errore nel parsing dell\'ordine delle subtask:', error);
                                // In caso di errore, mantieni l'ordine predefinito
                            }
                        } else {
                            // Se non c'è un ordine salvato, ordina per position
                            subtasksMap.set(parentId, [...taskSubtasks].sort((a, b) => a.position - b.position));
                        }
                    });

                    // Crea gli elementi per le task attive
                    orderedActiveTasks.forEach(task => {
                        createTaskElement(task.id, task.content, null, subtasksMap.get(task.id), task.priority, task.completed);
                    });

                    // Raggruppa le task completate per data di completamento
                    if (completedTasks.length > 0) {
                        // Ordina le task completate per data di completamento (più recenti prima)
                        completedTasks.sort((a, b) => {
                            // Se non c'è data di completamento, usa created_at o metti alla fine
                            const dateA = a.completed_at ? new Date(a.completed_at) :
                                (a.created_at ? new Date(a.created_at) : new Date(0));
                            const dateB = b.completed_at ? new Date(b.completed_at) :
                                (b.created_at ? new Date(b.created_at) : new Date(0));
                            return dateB - dateA;
                        });

                        // Crea una mappa per raggruppare per data
                        const tasksByDate = new Map();

                        // Funzione per formattare la data in modo leggibile
                        const formatDate = (dateStr) => {
                            if (!dateStr) return 'Data sconosciuta';

                            const date = new Date(dateStr);
                            const today = new Date();
                            const yesterday = new Date(today);
                            yesterday.setDate(yesterday.getDate() - 1);

                            // Formatta la data
                            if (date.toDateString() === today.toDateString()) {
                                return 'Oggi';
                            } else if (date.toDateString() === yesterday.toDateString()) {
                                return 'Ieri';
                            } else {
                                return date.toLocaleDateString('it-IT', {
                                    weekday: 'long',
                                    day: 'numeric',
                                    month: 'long',
                                    year: 'numeric'
                                });
                            }
                        };

                        // Raggruppa le task per data
                        completedTasks.forEach(task => {
                            const dateKey = task.completed_at ?
                                formatDate(task.completed_at) : 'Data sconosciuta';

                            if (!tasksByDate.has(dateKey)) {
                                tasksByDate.set(dateKey, []);
                            }

                            tasksByDate.get(dateKey).push(task);
                        });

                        // Crea sezioni per ogni data
                        tasksByDate.forEach((tasks, dateKey) => {
                            // Crea intestazione della sezione solo se ci sono task per quella data
                            if (tasks && tasks.length > 0) {
                                const dateHeader = document.createElement('div');
                                dateHeader.className = 'completed-date-header';
                                dateHeader.textContent = dateKey;
                                completedTasksList.appendChild(dateHeader);

                                // Crea le task per questa data
                                tasks.forEach(task => {
                                    createTaskElement(task.id, task.content, null, subtasksMap.get(task.id), task.priority, task.completed, task.completed_at);
                                });
                            }
                        });
                    }

                    // Aggiorna il contatore delle task completate
                    updateCompletedCounter();
                }
            } catch (error) {
                console.error('Errore nel caricamento delle attività:', error);
            }
        }

        // Modifica la funzione addTask per gestire le subtask
        async function addTask(parentId = null) {
            if (!currentProjectId) {
                showStatus('Seleziona prima un progetto', 'error');
                return;
            }

            let taskInput;
            if (parentId) {
                // Se è una subtask, usa l'input specifico della subtask
                taskInput = document.getElementById(`subtaskInput-${parentId}`);
                if (!taskInput) return;
            } else {
                // Altrimenti usa l'input principale
                taskInput = document.getElementById('taskInput');
            }

            const taskText = taskInput.value.trim();
            if (!taskText) return;

            try {
                if (currentEditingTaskId !== null) {
                    // Logica per la modifica di una task esistente
                    const priority = currentPriority;

                    const { error } = await supabase
                        .from('tasks')
                        .update({
                            content: taskText,
                            priority: priority
                        })
                        .eq('id', currentEditingTaskId);

                    if (error) throw error;

                    const taskElement = document.getElementById('task-' + currentEditingTaskId);
                    if (taskElement) {
                        const taskTextElement = taskElement.querySelector('.task-text');
                        taskTextElement.textContent = taskText;

                        // Rimuovi le precedenti classi di priorità
                        taskElement.classList.remove('priority-urgent', 'priority-medium', 'priority-normal');
                        // Aggiungi la nuova classe di priorità
                        taskElement.classList.add(`priority-${priority}`);
                    }

                    currentEditingTaskId = null;
                    const addButton = document.getElementById('addTaskButton');
                    addButton.innerHTML = '<i data-lucide="arrow-up" class="icon-arrow-up"></i>';
                    lucide.createIcons();

                    // Aggiorna le statistiche dopo la modifica
                    await refreshTaskStats();

                } else {
                    // Ottieni la posizione massima delle task nel progetto
                    let positionQuery = supabase
                        .from('tasks')
                        .select('position')
                        .eq('project_id', currentProjectId)
                        .order('position', { ascending: false })
                        .limit(1);

                    if (parentId) {
                        // Se è una subtask, filtra per parent_id
                        positionQuery = positionQuery.eq('parent_id', parentId);
                    } else {
                        // Se è una task principale, filtra per parent_id nullo
                        positionQuery = positionQuery.is('parent_id', null);
                    }

                    const { data: maxPositionData, error: maxError } = await positionQuery;

                    if (maxError) throw maxError;

                    const newPosition = maxPositionData && maxPositionData.length > 0
                        ? maxPositionData[0].position + 1
                        : 0;

                    // Crea la nuova task
                    const newTask = {
                        content: taskText,
                        project_id: currentProjectId,
                        position: newPosition
                    };

                    // Se è una subtask, aggiungi il parent_id
                    if (parentId) {
                        newTask.parent_id = parentId;
                    }

                    // Aggiungi la priorità selezionata (solo per task principali)
                    if (!parentId) {
                        newTask.priority = currentPriority;
                    } else {
                        // Ottieni la priorità dal genitore
                        const { data: parentData, error: parentError } = await supabase
                            .from('tasks')
                            .select('priority')
                            .eq('id', parentId)
                            .single();

                        if (!parentError && parentData && parentData.priority) {
                            newTask.priority = parentData.priority;
                        } else {
                            newTask.priority = 'normal'; // Default per le subtask
                        }
                    }

                    const { data, error } = await supabase
                        .from('tasks')
                        .insert([newTask])
                        .select();

                    if (error) throw error;

                    if (data && data.length > 0) {
                        if (parentId) {
                            // Se è una subtask, aggiungiamola al contenitore della task principale
                            createTaskElement(data[0].id, taskText, parentId, null, data[0].priority, data[0].completed);

                            // Nascondi l'input della subtask
                            const subtaskInputContainer = document.getElementById(`subtaskInputContainer-${parentId}`);
                            if (subtaskInputContainer) {
                                subtaskInputContainer.classList.remove('visible');
                            }

                            // Assicurati che il contenitore principale abbia la classe has-subtasks
                            const parentContainer = document.getElementById(`taskContainer-${parentId}`);
                            if (parentContainer) {
                                parentContainer.classList.add('has-subtasks');

                                // Assicurati che il contenitore delle subtask sia visibile
                                const subtasksContainer = document.getElementById(`subtasksContainer-${parentId}`);
                                if (subtasksContainer) {
                                    subtasksContainer.style.display = 'block';
                                }

                                // Aggiorna il contatore delle subtask
                                const subtasks = document.querySelectorAll(`#subtasksContainer-${parentId} .task-item`);
                                updateSubtaskCounter(parentId, subtasks.length + 1); // +1 per la nuova subtask
                            }
                        } else {
                            // Se è una task principale, creala normalmente
                            createTaskElement(data[0].id, taskText, null, null, data[0].priority, data[0].completed);

                            // Nascondi il selettore di priorità dopo la creazione
                            const prioritySelector = document.querySelector('.priority-selector');
                            if (prioritySelector) {
                                prioritySelector.classList.remove('visible');
                            }

                            // Resetta la priorità a normal per la prossima task
                            setPriority('normal');
                        }

                        // Aggiorna le statistiche dopo aver aggiunto la task
                        await refreshTaskStats();
                    }
                }

                taskInput.value = '';
            } catch (error) {
                console.error('Errore durante il salvataggio dell\'attività:', error);
            }
        }

        // Funzione per aggiungere una subtask
        function toggleSubtaskInput(taskId) {
            const subtaskInputContainer = document.getElementById(`subtaskInputContainer-${taskId}`);
            if (subtaskInputContainer) {
                subtaskInputContainer.classList.toggle('visible');
                if (subtaskInputContainer.classList.contains('visible')) {
                    document.getElementById(`subtaskInput-${taskId}`).focus();
                }
            }
        }

        // Funzione per toggleare la visibilità delle subtask
        function toggleSubtasks(taskId) {
            const taskContainer = document.getElementById(`taskContainer-${taskId}`);
            if (taskContainer) {
                taskContainer.classList.toggle('collapsed');

                // Aggiorna il contatore quando si chiude/apre
                const hasSubtasks = taskContainer.classList.contains('has-subtasks');
                if (hasSubtasks) {
                    const subtasks = document.querySelectorAll(`#subtasksContainer-${taskId} .task-item`);
                    updateSubtaskCounter(taskId, subtasks.length);
                }
            }
        }

        // Crea un elemento task nell'interfaccia
        function createTaskElement(taskId, taskText, parentId = null, subtasks = [], priority = 'normal', completed = false, completed_at = null) {
            // Trova il contenitore appropriato in base a se è una subtask o una task principale
            let container;
            if (parentId) {
                // Questa è una subtask, aggiungiamola al contenitore delle subtask della task genitore
                container = document.getElementById(`subtasksContainer-${parentId}`);
                if (!container) {
                    console.error('Contenitore subtask non trovato per parent_id:', parentId);
                    return;
                }
            } else if (completed) {
                // Se è una task completata principale, aggiungiamola alla lista delle task completate
                container = document.getElementById('completedTasksList');
            } else {
                // Questa è una task principale non completata, aggiungiamola alla lista principale
                container = document.getElementById('taskList');
            }

            // Per le task principali creiamo un contenitore che conterrà la task e le eventuali subtask
            if (!parentId) {
                // Creiamo un contenitore per la task principale e le sue subtask
                const taskContainer = document.createElement('div');
                taskContainer.className = 'task-container';
                taskContainer.id = `taskContainer-${taskId}`;
                taskContainer.setAttribute('draggable', 'true');
                taskContainer.dataset.taskId = taskId;

                if (subtasks && subtasks.length > 0) {
                    taskContainer.classList.add('has-subtasks');
                }

                container.appendChild(taskContainer);

                // Aggiorniamo il container per inserire la task principale
                container = taskContainer;
            }

            // Crea il contenitore dell'attività
            const taskElement = document.createElement('div');
            taskElement.className = parentId ? 'task-item subtask' : 'task-item';
            taskElement.id = 'task-' + taskId;
            taskElement.dataset.taskId = taskId;
            taskElement.draggable = true;

            // Aggiungi la classe completed se necessario
            if (completed) {
                taskElement.classList.add('completed');

                // Se c'è una data di completamento, aggiungiamola come attributo data per styling
                if (completed_at) {
                    taskElement.dataset.completedAt = completed_at;
                }
            }

            // Applica la classe di priorità se fornita
            if (priority) {
                taskElement.classList.add(`priority-${priority}`);
            } else {
                // Se non è stata fornita, recupera la priorità dal database
                (async function () {
                    try {
                        const { data, error } = await supabase
                            .from('tasks')
                            .select('priority')
                            .eq('id', taskId)
                            .single();

                        if (error) throw error;

                        if (data && data.priority) {
                            taskElement.classList.add(`priority-${data.priority}`);
                        } else {
                            // Default a normal se non è impostata una priorità
                            taskElement.classList.add('priority-normal');
                        }
                    } catch (error) {
                        console.error('Errore nel recupero della priorità:', error);
                    }
                })();
            }

            taskElement.addEventListener('dragstart', handleDragStart);
            taskElement.addEventListener('dragend', handleDragEnd);
            taskElement.addEventListener('dragover', handleDragOver);
            taskElement.addEventListener('drop', handleDrop);

            // Crea il contenitore per il contenuto della task
            const taskContent = document.createElement('div');
            taskContent.className = 'task-content';

            // Aggiungi l'icona cerchio a sinistra (modificata per gestire lo stato completato)
            const circleIcon = document.createElement('div');
            circleIcon.className = 'task-circle';

            if (completed) {
                circleIcon.innerHTML = '<i data-lucide="check-circle" class="icon-check-circle"></i>';
            } else {
                circleIcon.innerHTML = '<i data-lucide="circle" class="icon-circle"></i>';
            }

            // Aggiungi event listener per completare/ripristinare la task
            circleIcon.addEventListener('click', (e) => {
                e.stopPropagation();
                toggleTaskCompletion(taskId, !completed);
            });

            taskContent.appendChild(circleIcon);

            // Crea l'elemento per il testo dell'attività
            const taskTextElement = document.createElement('div');
            taskTextElement.className = 'task-text';
            taskTextElement.textContent = taskText;
            taskContent.appendChild(taskTextElement);

            // Se è una task principale, aggiungi il comportamento per aprire/chiudere le subtask
            if (!parentId) {
                // Aggiungiamo l'event listener al taskContent per aprire/chiudere le subtask
                taskContent.addEventListener('click', (e) => {
                    // Impedisci che il click raggiunga elementi annidati
                    if (e.target === taskContent || e.target === taskTextElement || e.target === circleIcon || e.target.closest('.task-circle')) {
                        toggleSubtasks(taskId);
                        e.stopPropagation();
                    }
                });

                // Aggiungi il pulsante per aggiungere subtask a destra (rimane nascosto nel CSS)
                const addSubtaskButton = document.createElement('button');
                addSubtaskButton.className = 'add-subtask';
                addSubtaskButton.innerHTML = '<i data-lucide="plus-circle" class="icon-plus-circle" style="width: 14px; height: 14px;"></i>';
                addSubtaskButton.title = 'Aggiungi subtask';
                addSubtaskButton.addEventListener('click', (e) => {
                    e.stopPropagation();
                    toggleSubtaskInput(taskId);
                });
                taskContent.appendChild(addSubtaskButton);
            }

            // Crea i pulsanti di azione
            const taskActions = document.createElement('div');
            taskActions.className = 'task-actions';

            // Pulsante modifica
            const editButton = document.createElement('button');
            editButton.className = 'edit-icon';
            editButton.innerHTML = '<i data-lucide="edit-2" class="icon-edit-2"></i>';
            editButton.title = 'Modifica';
            editButton.addEventListener('click', () => editTask(taskId));

            // Pulsante elimina con l'icona cestino
            const deleteButton = document.createElement('button');
            deleteButton.className = 'delete-icon';
            deleteButton.innerHTML = '<i data-lucide="trash-2" class="icon-trash"></i>';
            deleteButton.title = 'Elimina';
            deleteButton.addEventListener('click', () => deleteTask(taskId, parentId));

            // Assembla tutti gli elementi
            taskActions.appendChild(editButton);
            taskActions.appendChild(deleteButton);
            taskElement.appendChild(taskContent);
            taskElement.appendChild(taskActions);

            if (parentId) {
                // Se è una subtask, aggiungila direttamente al contenitore delle subtask
                container.appendChild(taskElement);
            } else {
                // Se è una task principale, aggiungila al container
                container.appendChild(taskElement);

                // Aggiungi il contatore delle subtask
                const subtaskCounter = document.createElement('div');
                subtaskCounter.className = 'subtask-counter';
                subtaskCounter.id = `subtaskCounter-${taskId}`;
                const subtaskCount = subtasks ? subtasks.length : 0;
                subtaskCounter.textContent = subtaskCount.toString();

                // Aggiungi il contatore alla task principale
                taskElement.appendChild(subtaskCounter);

                // Crea il contenitore per le subtask
                const subtasksContainer = document.createElement('div');
                subtasksContainer.className = 'subtasks-container';
                subtasksContainer.id = `subtasksContainer-${taskId}`;

                container.appendChild(subtasksContainer);

                // Crea il contenitore per l'input di nuove subtask
                const subtaskInputContainer = document.createElement('div');
                subtaskInputContainer.className = 'subtask-input-container';
                subtaskInputContainer.id = `subtaskInputContainer-${taskId}`;

                const subtaskInput = document.createElement('input');
                subtaskInput.type = 'text';
                subtaskInput.className = 'subtask-input';
                subtaskInput.id = `subtaskInput-${taskId}`;
                subtaskInput.placeholder = 'Nuova subtask...';
                subtaskInput.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') {
                        addTask(taskId);
                    }
                });

                const confirmSubtaskButton = document.createElement('button');
                confirmSubtaskButton.innerHTML = '<i data-lucide="plus" class="icon-plus"></i>';
                confirmSubtaskButton.addEventListener('click', () => addTask(taskId));

                subtaskInputContainer.appendChild(subtaskInput);
                subtaskInputContainer.appendChild(confirmSubtaskButton);
                container.appendChild(subtaskInputContainer);

                // Se ci sono subtask, aggiungile
                if (subtasks && subtasks.length > 0) {
                    // Ordina le subtask per posizione
                    const sortedSubtasks = [...subtasks].sort((a, b) => a.position - b.position);
                    sortedSubtasks.forEach(subtask => {
                        createTaskElement(subtask.id, subtask.content, taskId, null, subtask.priority, subtask.completed);
                    });

                    // Aggiorna il contatore delle subtask
                    updateSubtaskCounter(taskId, sortedSubtasks.length);
                }
            }

            // Controlla se rimangono altre subtask
            const remainingSubtasks = document.querySelectorAll(`#subtasksContainer-${parentId} .task-item`);
            if (remainingSubtasks.length === 0) {
                // Se non ci sono più subtask, rimuovi la classe has-subtasks
                const parentContainer = document.getElementById(`taskContainer-${parentId}`);
                if (parentContainer) {
                    parentContainer.classList.remove('has-subtasks');
                }
            } else {
                // Aggiorna il contatore con il numero aggiornato di subtask
                updateSubtaskCounter(parentId, remainingSubtasks.length);
            }

            lucide.createIcons();
        }

        // Modifica la funzione deleteTask per gestire anche le subtask
        async function deleteTask(taskId, parentId = null) {
            try {
                // Prima controlla se ci sono subtask (se è una task principale)
                if (!parentId) {
                    const { data: subtasks, error: subtasksError } = await supabase
                        .from('tasks')
                        .select('id')
                        .eq('parent_id', taskId);

                    if (subtasksError) throw subtasksError;

                    // Se ci sono subtask, eliminale prima
                    if (subtasks && subtasks.length > 0) {
                        for (const subtask of subtasks) {
                            await supabase
                                .from('tasks')
                                .delete()
                                .eq('id', subtask.id);
                        }
                    }
                }

                // Recupera le informazioni sulla task prima di eliminarla
                const { data: taskInfo, error: taskInfoError } = await supabase
                    .from('tasks')
                    .select('completed, completed_at')
                    .eq('id', taskId)
                    .single();

                if (taskInfoError) throw taskInfoError;

                // Ora elimina la task
                const { error } = await supabase
                    .from('tasks')
                    .delete()
                    .eq('id', taskId);

                if (error) throw error;

                // Rimuovi l'elemento dall'interfaccia
                if (parentId) {
                    // Se è una subtask, rimuovi solo l'elemento task
                    const taskElement = document.getElementById('task-' + taskId);
                    if (taskElement) {
                        taskElement.remove();
                    }

                    // Controlla se rimangono altre subtask
                    const remainingSubtasks = document.querySelectorAll(`#subtasksContainer-${parentId} .task-item`);
                    if (remainingSubtasks.length === 0) {
                        // Se non ci sono più subtask, rimuovi la classe has-subtasks
                        const parentContainer = document.getElementById(`taskContainer-${parentId}`);
                        if (parentContainer) {
                            parentContainer.classList.remove('has-subtasks');
                        }
                    }
                } else {
                    // Se è una task principale, rimuovi l'intero container
                    const taskContainer = document.getElementById('taskContainer-' + taskId);
                    if (taskContainer) {
                        taskContainer.remove();
                    }

                    // Controlla immediatamente se ci sono intestazioni da rimuovere
                    if (taskInfo && taskInfo.completed) {
                        checkAndRemoveEmptyHeaders();
                    }
                }

                // Aggiorna l'ordine delle task
                saveTaskOrder();

                // Aggiorna il contatore delle task completate
                updateCompletedCounter();
            } catch (error) {
                console.error('Errore durante l\'eliminazione dell\'attività:', error);
            }
        }

        // Funzione per modificare un'attività
        async function editTask(taskId) {
            const taskElement = document.getElementById('task-' + taskId);

            if (taskElement) {
                const taskTextElement = taskElement.querySelector('.task-text');
                const taskText = taskTextElement.textContent;

                // Carica il testo dell'attività nel campo di input
                const taskInput = document.getElementById('taskInput');
                taskInput.value = taskText;
                taskInput.focus();

                // Recupera la priorità della task dal database
                try {
                    const { data, error } = await supabase
                        .from('tasks')
                        .select('priority')
                        .eq('id', taskId)
                        .single();

                    if (error) throw error;

                    // Imposta la priorità corrente
                    if (data && data.priority) {
                        setPriority(data.priority);
                    } else {
                        setPriority('normal'); // Valore predefinito
                    }
                } catch (error) {
                    console.error('Errore nel recupero della priorità:', error);
                }

                // Cambia l'icona del pulsante e salva l'ID dell'attività in modifica
                const addButton = document.getElementById('addTaskButton');
                addButton.innerHTML = '<i data-lucide="check" class="icon-check"></i>';
                lucide.createIcons();
                currentEditingTaskId = taskId;
            }
        }

        // Aggiungi la gestione della scorciatoia da tastiera
        document.addEventListener('keydown', (e) => {
            // Controlla se è premuto Command (Mac) o Control (Windows)
            if ((e.metaKey || e.ctrlKey) && !isNaN(e.key) && e.key !== '0') {
                e.preventDefault();
                const projectNumber = parseInt(e.key);
                const projects = document.querySelectorAll('.project-item');

                if (projectNumber <= projects.length) {
                    const project = projects[projectNumber - 1];
                    const projectId = project.dataset.projectId;
                    const projectName = project.querySelector('.project-content').textContent;
                    selectProject(projectId, projectName);
                }
            }

            // Aggiungi la shortcut Command+P per creare un nuovo progetto solo se la view è aperta
            if ((e.metaKey || e.ctrlKey) && e.key.toLowerCase() === 'p') {
                const projectsContainer = document.querySelector('.projects-container');
                if (projectsContainer.classList.contains('visible')) {
                    e.preventDefault();
                    toggleProjectInput();
                }
            }
        });

        // Aggiorna i numeri dei progetti quando vengono aggiunti o rimossi
        function updateProjectNumbers() {
            const projects = document.querySelectorAll('.project-item');
            projects.forEach((project, index) => {
                const numberElement = project.querySelector('.project-number');
                if (numberElement) {
                    numberElement.textContent = index + 1;
                }
            });
        }

        // Funzione per mostrare uno stato
        function showStatus(message, type = 'info') {
            const statusElement = document.getElementById('statusMessage');
            if (statusElement) {
                statusElement.textContent = message;
                statusElement.className = 'status-message ' + type;

                // Pulisci il messaggio dopo 3 secondi
                setTimeout(() => {
                    statusElement.textContent = '';
                    statusElement.className = 'status-message';
                }, 3000);
            }
        }

        // Funzione per aggiornare il contatore delle subtask
        function updateSubtaskCounter(taskId, count) {
            const subtaskCounter = document.getElementById(`subtaskCounter-${taskId}`);
            if (subtaskCounter) {
                subtaskCounter.textContent = count.toString();

                // Se non ci sono subtask, nascondi il contatore
                if (count === 0) {
                    const taskContainer = document.getElementById(`taskContainer-${taskId}`);
                    if (taskContainer) {
                        taskContainer.classList.remove('has-subtasks');
                    }
                }
            }
        }

        // Inizializza il popup di selezione della priorità
        function initPrioritySelector() {
            const priorityOptions = document.querySelectorAll('.priority-option');
            const prioritySelector = document.querySelector('.priority-selector');
            const taskInput = document.getElementById('taskInput');

            // Imposta la priorità di default
            setPriority('normal');

            // Mostra il selettore quando l'utente inizia a digitare nell'input principale
            // e SOLO per l'input principale, non per le subtask
            taskInput.addEventListener('input', () => {
                if (taskInput.value.trim() !== '') {
                    prioritySelector.classList.add('visible');
                    taskInput.closest('.task-input-container').classList.add('has-text');
                } else {
                    prioritySelector.classList.remove('visible');
                    taskInput.closest('.task-input-container').classList.remove('has-text');
                    // Resetta la priorità a "normal" quando il testo viene cancellato
                    setPriority('normal');
                }
            });

            // Nascondi il selettore quando l'input perde il focus
            taskInput.addEventListener('blur', () => {
                // Aggiungiamo un breve ritardo per permettere all'utente di cliccare un'opzione
                setTimeout(() => {
                    if (!prioritySelector.contains(document.activeElement)) {
                        prioritySelector.classList.remove('visible');
                    }
                }, 200);
            });

            // Gestisci la selezione della priorità
            priorityOptions.forEach(option => {
                option.addEventListener('click', () => {
                    const priority = option.dataset.priority;
                    setPriority(priority);
                });
            });
        }

        // Imposta la priorità corrente
        function setPriority(priority) {
            currentPriority = priority;

            // Rimuovi la classe selected da tutte le opzioni
            document.querySelectorAll('.priority-option').forEach(option => {
                option.classList.remove('selected');
            });

            // Aggiungi la classe selected all'opzione selezionata
            const selectedOption = document.querySelector(`.priority-option.priority-${priority}`);
            if (selectedOption) {
                selectedOption.classList.add('selected');
            }

            // Aggiorna l'indicatore di priorità sul contenitore dell'input
            const inputContainer = document.querySelector('.task-input-container');
            if (inputContainer) {
                // Rimuovi tutte le classi di priorità
                inputContainer.classList.remove('priority-urgent', 'priority-medium', 'priority-normal');
                // Aggiungi la classe di priorità corrente
                inputContainer.classList.add(`priority-${priority}`);
            }

            // Rimetti il focus sull'input e verifica la presenza di testo
            const taskInput = document.getElementById('taskInput');
            if (taskInput) {
                // Riporta il focus sull'input
                taskInput.focus();

                // Verifica se c'è del testo nell'input per mostrare/nascondere l'icona plus e la linea
                if (taskInput.value.trim() !== '') {
                    inputContainer.classList.add('has-text');
                } else {
                    inputContainer.classList.remove('has-text');
                }
            }
        }

        // Aggiungi gli event listener per il taskList principale
        document.addEventListener('DOMContentLoaded', function () {
            // Aggiungi gli event listener dopo che il DOM è completamente caricato
            const taskList = document.getElementById('taskList');

            // Consenti il drop nella zona principale delle task
            taskList.addEventListener('dragover', function (e) {
                e.preventDefault();
                e.dataTransfer.dropEffect = 'move';

                // Evidenzia l'area quando si trascina una subtask sopra di essa
                const draggedItem = document.querySelector('.dragging');
                if (draggedItem && draggedItem.classList.contains('subtask')) {
                    this.classList.add('task-area-highlight');
                }
            });

            taskList.addEventListener('dragleave', function (e) {
                this.classList.remove('task-area-highlight');
            });

            taskList.addEventListener('drop', handleDrop);
        });

        // Funzione per mostrare/nascondere le task completate
        function toggleCompletedTasks() {
            const completedTasksList = document.getElementById('completedTasksList');
            const completedButton = document.getElementById('completedTasksButton');

            showCompletedTasks = !showCompletedTasks;

            if (showCompletedTasks) {
                completedTasksList.style.display = 'flex';
                document.getElementById('taskList').style.display = 'none';
                completedButton.classList.add('active');
            } else {
                completedTasksList.style.display = 'none';
                document.getElementById('taskList').style.display = 'flex';
                completedButton.classList.remove('active');
            }
        }

        // Funzione per controllare e rimuovere intestazioni di date senza task
        function checkAndRemoveEmptyHeaders() {
            const completedTasksList = document.getElementById('completedTasksList');
            if (!completedTasksList) return;

            // Trova tutte le intestazioni di date
            const dateHeaders = completedTasksList.querySelectorAll('.completed-date-header');

            dateHeaders.forEach(header => {
                let nextElement = header.nextElementSibling;
                let hasTasksUnderHeader = false;

                // Verifica se ci sono task sotto questa intestazione
                while (nextElement && !nextElement.classList.contains('completed-date-header')) {
                    if (nextElement.classList.contains('task-container')) {
                        hasTasksUnderHeader = true;
                        break;
                    }
                    nextElement = nextElement.nextElementSibling;
                }

                // Se non ci sono task, rimuovi l'intestazione
                if (!hasTasksUnderHeader) {
                    header.remove();
                }
            });
        }

        // Modifica la funzione toggleTaskCompletion per chiamare checkAndRemoveEmptyHeaders
        async function toggleTaskCompletion(taskId, completedState) {
            try {
                // Prepara i dati da aggiornare
                const updateData = { completed: completedState };

                // Se la task viene completata, aggiungi la data di completamento
                if (completedState) {
                    updateData.completed_at = new Date().toISOString();
                } else {
                    // Se la task viene ripristinata, rimuovi la data di completamento
                    updateData.completed_at = null;
                }

                // Aggiorna lo stato nel database
                const { error } = await supabase
                    .from('tasks')
                    .update(updateData)
                    .eq('id', taskId);

                if (error) throw error;

                // Controlla e rimuovi le intestazioni senza task
                checkAndRemoveEmptyHeaders();

                // Ricarica le task per aggiornare l'interfaccia
                await loadTasks();

                if (completedState) {
                    showStatus('Task completata', 'success');
                } else {
                    showStatus('Task ripristinata', 'info');
                }

            } catch (error) {
                console.error('Errore durante l\'aggiornamento dello stato della task:', error);
                showStatus('Errore: ' + (error.message || 'Problema durante l\'aggiornamento'), 'error');
            }
        }

        // Modifica la funzione deleteTask per aggiornare le statistiche
        async function deleteTask(taskId, parentId = null) {
            try {
                // Prima controlla se ci sono subtask (se è una task principale)
                if (!parentId) {
                    const { data: subtasks, error: subtasksError } = await supabase
                        .from('tasks')
                        .select('id')
                        .eq('parent_id', taskId);

                    if (subtasksError) throw subtasksError;

                    // Se ci sono subtask, eliminale prima
                    if (subtasks && subtasks.length > 0) {
                        for (const subtask of subtasks) {
                            await supabase
                                .from('tasks')
                                .delete()
                                .eq('id', subtask.id);
                        }
                    }
                }

                // Recupera le informazioni sulla task prima di eliminarla
                const { data: taskInfo, error: taskInfoError } = await supabase
                    .from('tasks')
                    .select('completed, completed_at')
                    .eq('id', taskId)
                    .single();

                if (taskInfoError) throw taskInfoError;

                // Ora elimina la task
                const { error } = await supabase
                    .from('tasks')
                    .delete()
                    .eq('id', taskId);

                if (error) throw error;

                // Rimuovi l'elemento dall'interfaccia
                if (parentId) {
                    // Se è una subtask, rimuovi solo l'elemento task
                    const taskElement = document.getElementById('task-' + taskId);
                    if (taskElement) {
                        taskElement.remove();
                    }

                    // Controlla se rimangono altre subtask
                    const remainingSubtasks = document.querySelectorAll(`#subtasksContainer-${parentId} .task-item`);
                    if (remainingSubtasks.length === 0) {
                        // Se non ci sono più subtask, rimuovi la classe has-subtasks
                        const parentContainer = document.getElementById(`taskContainer-${parentId}`);
                        if (parentContainer) {
                            parentContainer.classList.remove('has-subtasks');
                        }
                    }
                } else {
                    // Se è una task principale, rimuovi l'intero container
                    const taskContainer = document.getElementById('taskContainer-' + taskId);
                    if (taskContainer) {
                        taskContainer.remove();
                    }

                    // Controlla immediatamente se ci sono intestazioni da rimuovere
                    if (taskInfo && taskInfo.completed) {
                        checkAndRemoveEmptyHeaders();
                    }
                }

                // Aggiorna l'ordine delle task
                saveTaskOrder();

                // Aggiorna il contatore delle task completate e le statistiche
                updateCompletedCounter();

                // Ottieni tutte le task per aggiornare le statistiche
                await refreshTaskStats();
            } catch (error) {
                console.error('Errore durante l\'eliminazione dell\'attività:', error);
            }
        }

        // Funzione per aggiornare le statistiche dopo modifiche alle task
        async function refreshTaskStats() {
            try {
                // Ottieni tutte le task del progetto corrente
                let query = supabase.from('tasks').select('*');

                if (currentProjectId !== 'all') {
                    query = query.eq('project_id', currentProjectId);
                }

                const { data, error } = await query;

                if (error) throw error;

                // Aggiorna le statistiche
                updateInfoStats(data || []);
            } catch (error) {
                console.error('Errore durante l\'aggiornamento delle statistiche:', error);
            }
        }

        // Funzione per aggiornare il contatore delle task completate
        function updateCompletedCounter() {
            const completedTasks = document.getElementById('completedTasksList').querySelectorAll('.task-container').length;
            document.getElementById('completedCount').textContent = completedTasks.toString();

            // Mostra/nascondi il contatore in base al numero di task completate
            if (completedTasks > 0) {
                document.getElementById('completedCount').style.display = 'inline-flex';
            } else {
                document.getElementById('completedCount').style.display = 'inline-flex'; // Modificato per mostrare sempre il contatore

                // Se siamo nella vista delle task completate, torna alla vista normale
                if (showCompletedTasks) {
                    toggleCompletedTasks();
                }
            }
        }

        // Inizializza l'app
        document.addEventListener('DOMContentLoaded', initUI);

        // Aggiungo gli event listener per gli elementi
        document.addEventListener('DOMContentLoaded', () => {
            // Event listener esistenti
            document.querySelector('.add-project-menu-button').addEventListener('click', () => {
                toggleProjectInput();
            });
            document.getElementById('completedTasksButton').addEventListener('click', toggleCompletedTasks);

            // Aggiungo i nuovi event listener per i filtri di priorità
            document.getElementById('urgentFilter').addEventListener('click', () => togglePriorityFilter('urgent'));
            document.getElementById('mediumFilter').addEventListener('click', () => togglePriorityFilter('medium'));
            document.getElementById('basicFilter').addEventListener('click', () => togglePriorityFilter('basic'));

            // Altri event listener come prima...
            // ... existing code ...
        });

